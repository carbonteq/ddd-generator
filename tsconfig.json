{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "target": "es2020",
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2020",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string",
      "dom"
    ]
  }
}